{
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["es6", "es7", "es2017", "es2018", "dom", "dom.iterable", "esnext"],
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "esModuleInterop": true
  },
  "include": ["src/**/*", "typings/**/*"]
}
